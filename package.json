{
  "name": "@4s1/appointment-creator",
  "version": "1.1.0",
  "private": true,
  "description": "appointment creator",
  "bugs": {
    "url": "https://gitlab.com/4s1/appointment-creator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/appointment-creator.git"
  },
  "license": "MIT",
  "author": "Steffen <steffen@4s1.de>",
  "type": "commonjs",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:dev": "pnpm run build -- --project tsconfig.dev.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint --ext .ts src/",
    "prepare": "husky install",
    "release": "git diff --exit-code --quiet && pnpm run lbt && standard-version",
    "release:major": "pnpm run release -- --release-as major",
    "release:minor": "pnpm run release -- --release-as minor",
    "release:patch": "pnpm run release -- --release-as patch",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "test": "ava",
    "test:cov": "c8 ava",
    "test:watch": "ava --watch"
  },
  "prettier": "@4s1/eslint-config",
  "dependencies": {
    "luxon": "2.3.1"
  },
  "devDependencies": {
    "@4s1/eslint-config": "3.10.0",
    "@4s1/ts-config": "1.4.0",
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@types/luxon": "2.3.0",
    "@types/node": "14.18.12",
    "ava": "4.1.0",
    "c8": "7.11.0",
    "eslint": "8.11.0",
    "husky": "7.0.4",
    "prettier": "2.5.1",
    "standard-version": "9.3.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.2"
  }
}
