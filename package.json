{
  "name": "@4s1/appointment-creator",
  "version": "1.0.0",
  "private": true,
  "description": "appointment creator",
  "bugs": {
    "url": "https://gitlab.com/4s1/appointment-creator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/appointment-creator.git"
  },
  "license": "MIT",
  "author": "Steffen <steffen@4s1.de>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rm -rf dist && rm -rf out && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "pnpm run lint -- --fix",
    "start": "ts-node src/index.ts",
    "test": "mocha --require ts-node/register src/*.spec.ts src/**/*.spec.ts",
    "test:cov": "pnpm run test:cov-html && opener coverage/index.html",
    "test:cov-html": "nyc --reporter=html --reporter=text-summary npm test",
    "test:cov-text": "nyc --reporter=text-summary npm test",
    "release": "git diff --exit-code --quiet && pnpm run lbt && standard-version",
    "release:major": "pnpm run release -- --release-as major",
    "release:minor": "pnpm run release -- --release-as minor",
    "release:patch": "pnpm run release -- --release-as patch",
    "prepare": "husky install"
  },
  "prettier": "@4s1/eslint-config",
  "dependencies": {
    "dayjs": "1.10.7"
  },
  "devDependencies": {
    "@4s1/changelog-config": "2.0.2",
    "@4s1/eslint-config": "3.1.2",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/chai": "4.2.22",
    "@types/mocha": "9.0.0",
    "@types/node": "14.17.17",
    "chai": "4.3.4",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "mocha": "9.1.1",
    "nyc": "15.1.0",
    "opener": "1.5.2",
    "prettier": "2.4.1",
    "standard-version": "9.3.1",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  }
}
