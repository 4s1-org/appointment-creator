{
  "name": "@yellowgarbagebag/appointment-creator",
  "version": "0.0.1",
  "private": true,
  "description": "appointment creator",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:YellowGarbageGroup/appointment-creator.git"
  },
  "license": "MIT",
  "author": "Steffen <YellowGarbageBag@4s1.de>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prebuild": "rm -rf dist && rm -rf out",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "pnpm run lint -- --fix",
    "start": "ts-node src/index.ts",
    "test": "mocha --require ts-node/register src/*.spec.ts src/**/*.spec.ts",
    "test:cov": "pnpm run test:cov-html && opener coverage/index.html",
    "test:cov-html": "nyc --reporter=html --reporter=text-summary npm test",
    "test:cov-text": "nyc --reporter=text-summary npm test"
  },
  "prettier": "@yellowgarbagegroup/eslint-config",
  "dependencies": {
    "dayjs": "1.10.6"
  },
  "devDependencies": {
    "@types/chai": "4.2.21",
    "@types/mocha": "9.0.0",
    "@types/node": "14.17.12",
    "@yellowgarbagegroup/eslint-config": "2.0.1",
    "chai": "4.3.4",
    "eslint": "7.32.0",
    "mocha": "9.1.0",
    "nyc": "15.1.0",
    "opener": "1.5.2",
    "prettier": "2.3.2",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  }
}
