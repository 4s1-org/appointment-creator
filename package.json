{
  "name": "@4s1/appointment-creator",
  "version": "1.0.0",
  "private": true,
  "description": "appointment creator",
  "bugs": {
    "url": "https://gitlab.com/4s1/appointment-creator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/appointment-creator.git"
  },
  "license": "MIT",
  "author": "Steffen <steffen@4s1.de>",
  "type": "module",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && rm -rf out && tsc",
    "build:dev": "pnpm run build -- --project tsconfig.dev.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "preinstall": "npx only-allow pnpm",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "pnpm run lint -- --fix",
    "prepare": "husky install",
    "release": "git diff --exit-code --quiet && pnpm run lbt && standard-version",
    "release:major": "pnpm run release -- --release-as major",
    "release:minor": "pnpm run release -- --release-as minor",
    "release:patch": "pnpm run release -- --release-as patch",
    "start": "node dist/index.js",
    "start:dev": "node --loader ts-node/esm src/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "prettier": "@4s1/eslint-config",
  "devDependencies": {
    "@4s1/eslint-config": "3.1.2",
    "@4s1/ts-config": "1.2.2",
    "@commitlint/cli": "13.2.0",
    "@commitlint/config-conventional": "13.2.0",
    "@types/jest": "27.0.2",
    "@types/luxon": "2.0.4",
    "@types/node": "14.17.21",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "jest": "27.2.4",
    "prettier": "2.4.1",
    "standard-version": "9.3.1",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "luxon": "2.0.2"
  }
}
