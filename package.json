{
  "name": "@yellowgarbagebag/appointment-creator",
  "version": "0.0.1",
  "private": true,
  "description": "appointment creator",
  "homepage": "https://gitlab.com/YellowGarbageBag/appointment-creator",
  "bugs": {
    "url": "https://gitlab.com/YellowGarbageBag/appointment-creator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/YellowGarbageBag/appointment-creator.git"
  },
  "license": "ISC",
  "author": "Steffen",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prebuild": "rm -rf dist && rm -rf out",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "start": "ts-node src/index.ts",
    "test": "mocha --require ts-node/register src/*.spec.ts src/**/*.spec.ts",
    "test:cov": "npm run test:cov-html && opener coverage/index.html",
    "test:cov-html": "nyc --reporter=html --reporter=text-summary npm test",
    "test:cov-text": "nyc --reporter=text-summary npm test",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "prettier": "@hest-lab/eslint-config",
  "dependencies": {
    "dayjs": "^1.9.6"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.2.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.7",
    "chai": "^4.2.0",
    "eslint": "^7.13.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "opener": "^1.5.2",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
